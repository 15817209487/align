<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AlignTextView">
        <attr name="text_size" format="dimension" />
        <attr name="text_color" format="color" />
        <attr name="text_colon" format="string" />
        <attr name="colon_padding_left" format="dimension" />
        <attr name="colon_padding_right" format="dimension" />
        <attr name="text" format="string" />
        <attr name="align_style" format="enum" >
            <enum name="spread_inside" value="0"/>
            <enum name="spread" value="1"/>
        </attr>
    </declare-styleable>

</resources>